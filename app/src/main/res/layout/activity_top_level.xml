<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hfad.dbtest.TopLevelActivity">

    <ImageView
        android:layout_marginTop="@dimen/iv_mt"
        android:layout_marginBottom="@dimen/iv_mb"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:src="@drawable/starbuzz_logo"/>

    <ListView
        android:id="@+id/lv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/nav"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_favDrinks"
        android:textSize="20sp"
        android:layout_marginStart="15dp"/>

    <ListView
        android:id="@+id/lv_favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
